<launch>
  <!-- User supplied arguments -->
  <arg name="pointcloud_topic"
       doc="ROS topic for pointcloud input"/>
  <arg name="bag_file"
       default="/media/lxl/winsystem/lxl/Documents/dataset/bagfiles/uHumans2_office_s1_00h.bag"
       doc="Replay the rosbag at the specified path. Can be left blank." />
  <arg name="play_bag"
       default="true"/>
  <arg name="visualize" 
       default="false"
       doc="visual mask and depth segmentation image"/>
  <arg name="rosbag_skip_first_n_sec"
       default="10"
       doc="Skip the first n seconds of the rosbag." />
  <arg name="debug_mode"
       default="true"
       doc="Run the mapper in debug mode." />
  <arg name="show_rviz"
       default="false"
       doc="Automatically launch Rviz." />

  <param name="use_sim_time" value="true"/>
  <!-- Run voxblox_pp in sliding window mode -->

  <node pkg="tf" type="static_transform_publisher" name="baselink_leftcam_broadcaster" args="0.0 0.05 0.0 0.5 -0.5 0.5 -0.5  base_link_gt left_cam 100" />

  <group>
    <include file="$(find gsm_node)/launch/vpp_pipeline.launch">
        <arg name="scene_name" value="uHumans" />
        <arg name="sensor_name" value="primesense" />
        <arg name="visualize" value="$(arg visualize)" />
        <arg name="tsdf_voxel_size" value="0.05"/>
        <arg name="voxels_per_side" value="8"/>
        <arg name="truncation_distance" value="1.0"/>
        <arg name="truncation_distance_factor" value="4"/>
        <!-- <param name="use_sim_time" value="true"/> -->
    </include>

  
  </group>

  <!-- Run voxgraph, subscribing to voxblox's sliding window -->
  <group>
    <arg unless="$(arg debug_mode)" name="launch_prefix" value="" />
    <arg if="$(arg debug_mode)" name="launch_prefix" value="gdb -ex run --args" />

    <node name="voxgraph_mapper" pkg="voxgraph" type="voxgraph_mapping_node"
          output="screen" launch-prefix="$(arg launch_prefix)">
      <rosparam file="$(find voxgraph)/config/uHumans_voxgraph_mapper.yaml" />
      <param name="submap_topic" value="/gsm_node/tsdf_map_out" />
    </node>
  </group>

  <!-- Show Rviz -->
  <group if="$(arg show_rviz)">
    <arg name="rviz_file" default="$(find voxgraph)/config/voxgraph_mapper.rviz" />
    <node pkg="rviz" type="rviz" name="$(anon rviz)" output="screen"
          args="-d $(arg rviz_file)" />
  </group>

  <node name="bag" pkg="rosbag" type="play" output="screen" args=" -d 10 -r 0.08 -s $(arg rosbag_skip_first_n_sec) --clock $(arg bag_file)" if="$(arg play_bag)">
    <remap from="/tesse/left_cam/rgb/image_raw" to="/camera/rgb/image_raw" />
    <remap from="/tesse/left_cam/camera_info" to="/camera/rgb/camera_info" />
    <remap from="/tesse/depth_cam/mono/image_raw" to="/camera/depth/image_raw" />
    <remap from="/tesse/depth_cam/camera_info" to="/camera/depth/camera_info" />
  </node>
</launch>
